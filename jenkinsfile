pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/yourusername/yourportfolio.git'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building portfolio..."'
            }
        }
        stage('Deploy') {
            steps {
                sh 'git push origin gh-pages --force'
            }
        }
    }
}
